citHeader("To cite SpeedyMarkov in publications use:")

citEntry(entry = "Article",
  title        = "SpeedyMarkov",
  author       = personList(as.person("Sam Abbott"), as.person("Howard Thom")),
  journal      = "-",
  year         = "2019",
  volume       = "",
  number       = "",
  pages        = "",
  doi          = "",

  textVersion  =
  paste("Sam Abbott (2019).",
        "SpeedyMarkov",
        "-",
        "-")
)